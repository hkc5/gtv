#!/bin/bash

# Convert markdown to docx using pandoc
# Usage: md2doc <filename.md>

if [ -z "$1" ]; then
    echo "Usage: md2doc <filename.md>"
    exit 1
fi

if [ ! -f "$1" ]; then
    echo "Error: File '$1' does not exist"
    exit 1
fi

output="${1%.*}.docx"
pandoc -o "$output" "$1" && echo "Converted '$1' to '$output'"