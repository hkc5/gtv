{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build LaTeX",
            "type": "shell",
            "command": "pdflatex -interaction=nonstopmode -file-line-error ${fileBasename} && rm -f ${fileBasenameNoExtension}.aux ${fileBasenameNoExtension}.log",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        }
    ]
}
